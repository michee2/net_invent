<!-- hibernate.cfg.xml -->
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://172.18.0.2:5432/dev-net-invent</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>

        <!-- Specify dialect for PostgreSQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="hibernate.show_sql">true</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mention annotated class -->
        <mapping class="ci.net.demo1.models.entities.Equipment"/>
        <mapping class="ci.net.demo1.models.entities.Site"/>
        <mapping class="ci.net.demo1.models.entities.Role"/>
        <mapping class="ci.net.demo1.models.entities.UpdatingLog"/>
        <mapping class="ci.net.demo1.models.entities.Link"/>
        <mapping class="ci.net.demo1.models.entities.User"/>

    </session-factory>
</hibernate-configuration>
